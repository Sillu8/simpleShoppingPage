<section>
    <div class="container mt-5 table-responsive" style="overflow-x:auto">
        <table id="userData" class="table table-dark table-striped table-sm">
            <thead>
                <tr>
                    <th col="2">Name</th>
                    <th col="2">Email</th>
                    <th col="2">Edit</th>
                    <th col="2">Delete</th>
                </tr>
            </thead>
            <tbody>

                {{#each users}}
                <tr>
                    <td class="table-data text-wrap">{{this.userName}}</td>
                    <td class="table-data text-wrap">{{this.userEmail}}</td>
                    <td class="table-data text-wrap"><a href="/admin/editUser/{{this._id}}" class="btn btn-primary">Edit</a></td>
                    <td class="table-data text-wrap"><a href="/admin/deleteUser/{{this._id}}"
                            onclick="return confirm('Are you sure you want to delete {{this.userName}}?')"
                            class="btn btn-danger">Delete</a></td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#userData').DataTable();
    });
</script>