<section class="container">
    <div class="container mt-5">
        <table id="userData" class="table table-dark table-striped table-sm">
            <thead>
                <tr>
                    <th >Name</th>
                    <th >Email</th>
                    <th >Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>

                {{#each users}}
                <tr>
                    <td class="table-data">{{this.userName}}</td>
                    <td class="table-data">{{this.userEmail}}</td>
                    <td class="table-data"><a href="/admin/editUser/{{this._id}}" class="btn btn-primary">Edit</a></td>
                    <td class="table-data"><a href="/admin/deleteUser/{{this._id}}"
                            onclick="return confirm('Are you sure you want to delete {{this.userName}}?')"
                            class="btn btn-danger">Delete</a></td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#userData').DataTable();
    });
</script>