<script>
    $(document).ready(function () {
        $('#addUserForm').validate({
            rules: {
                userName: {
                    required: true
                },
                userEmail: {
                    required: true,
                    email: true
                },
                userPassword: {
                    required: true,
                    minlength: 6
                }
            },
            messages: {
                userName: {
                    required: "Please enter the "
                },
                userEmail: {
                    required: "Please enter the ",
                    email: "Please enter proper "
                },
                userPassword: {
                    required: "Please enter the ",
                    minlength: "Please enter atleast 6 digits."
                }
            }

        })
    })
</script>

<section class="vh-100">
    {{!-- style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');"> --}}
    <div class="mask d-flex align-items-center vh-100  gradient-custom-3">
        <div class="container h-75">
            <div class="row d-flex justify-content-center align-items-center h-75">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Add User</h2>

                            {{#if userExists}}
                            <p class="text-danger mb-5 fw-bold mt-3 text-center">{{userExistsMsg}}</p>
                            {{/if}}

                            <form method="post" action="/admin/add-user" id="addUserForm">

                                <div class="form-outline mb-4">
                                    <input type="text" id="name" class="form-control form-control-lg" name="userName" />
                                    <label class="form-label pt-2" for="name">User Name</label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input type="email" id="form3Example3cg" class="form-control form-control-lg"
                                        name="userEmail" />
                                    <label class="form-label pt-2" for="form3Example3cg">Email</label>
                                </div>


                                <div class="form-outline mb-4">
                                    <input type="password" id="form3Example4cg" class="form-control form-control-lg"
                                        name="userPassword" />
                                    <label class="form-label pt-2" for="form3Example4cg">Password</label>
                                </div>


                                <div class="d-flex justify-content-center">
                                    <input type="submit"
                                        class="btn btn-success btn-block btn-lg gradient-custom-4 text-body"
                                        value="Submit">
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>